                        <a href="www.google.com" class="hvr-grow"><i class="ion-social-googleplus"></i></a>
                        <a href="www.youtube.com" class="hvr-grow"><i class="ion-social-youtube"></i></a>
                      </div>
                    </div>    
                  </div>
                    <div class="mv-details">
                      <p><i class="ion-android-star"></i><span>7.4</span> /10</p>
                      <ul class="mv-infor">
                        <li>  Run Time: <%=movie.length%> minsâ€™ </li>
                        <li>  Release: <%=movie.year.day%> <%=movie.year.month%>, <%=movie.year.year%>, /li>
                      </ul>
                    </div>
                    <div class="btn-transform transform-vertical">
                    <div><a href="#" class="item item-1 redbtn">more detail</a></div>
                    <div><a href=" <%= movie_path(movie) %>" class="item item-2 redbtn hvrbtn">more detail</a></div>
                  </div>    
                  </div>
                </div>
                <div class="col-md-4 col-sm-12 col-xs-12">
                  <div class="mv-img-2">
                    <a href="#"><%= image_tag movie.thumb_nail(270, 414) %></a>
                  </div>
                </div>
              </div>  
            </div>
          <% end %>
        </div>
      </div>
  </div>
</div>
