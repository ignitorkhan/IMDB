$(document).ready(function(){
  $('div#review-id-<%=(@review.id)%>').hide();
  flash_update("<%= j (render partial: 'layouts/jsflash') %> ");
  $('div.average-review-rating').data('score', "<%=calculate_average_review(@review.movie) %>");
  $('#number-average-review-rating').text("<%=calculate_average_review(@review.movie) %>");
  $('.average-review-rating').raty({
    readOnly: true,
    score: function() {
      return $(this).attr('data-score')
    }
  });
  $("b#movie-review-count-1").text(parseInt($("b#movie-review-count-1").text()) - 1);
  $("b#movie-review-count-2").text(parseInt($("b#movie-review-count-2").text()) - 1);
});
