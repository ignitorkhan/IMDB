$(document).ready(function(){
  flash_update("<%= j (render partial: 'layouts/jsflash') %> ");
  <% if !@review.errors.any? %>
    $("div#review-list").append(" <%= j(render partial: 'review', locals: {review: @review})%>");
    $('input#review_title').val("");
    $('input#review_comment').val("");
    $('div#rating-form').val(""); 
    $('#rating-form').raty('click', 0);
    $('.average-review-rating').raty({
      readOnly: true,
      score: function() {
        return $(this).attr('data-score')
      }
    });
    $('.review-rating').raty({
      readOnly: true,
      score: function() {
      return $(this).attr('data-score')
      }
    });
    $('#rating-form').raty({
      scoreName: 'review[rating]'
    });
  <% end %>
});

